<script>
    // Yükleme ekranı sonrası ana içeriği göster
    window.addEventListener('load', function () {
        setTimeout(function () {
            document.getElementById('loading-screen').style.opacity = 0.8;
            setTimeout(function () {
                document.getElementById('loading-screen').style.display = 'none';
                document.getElementById('main-content').style.display = 'block';
                document.getElementById('main-content').style.opacity = 1;
            }, 1000); // Opacity değişimi için bekleme süresi
        }, 2000); // 2 saniye sonra ana içeriği göster
    });
    // Sıkça sorulan sorular
    document.addEventListener("DOMContentLoaded", function () {
        const faqHeader = document.querySelector(".faq-header");
        const faqItems = document.querySelectorAll(".accordion-collapse");

        faqHeader.addEventListener("click", function () {
            faqItems.forEach(item => {
                if (!item.classList.contains("show")) {
                    item.classList.add("show");
                } else {
                    item.classList.remove("show");
                }
            });
        });
    });
</script>




