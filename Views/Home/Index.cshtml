<script>
    // Yükleme ekranı sonrası ana içeriği göster
    window.addEventListener('load', function () {
        setTimeout(function () {
            document.getElementById('loading-screen').style.opacity = 0.8;
            setTimeout(function () {
                document.getElementById('loading-screen').style.display = 'none';
                document.getElementById('main-content').style.display = 'block';
                document.getElementById('main-content').style.opacity = 1;
            }, 1000); // Opacity değişimi için bekleme süresi
        }, 2000); // 2 saniye sonra ana içeriği göster
    });
</script>
